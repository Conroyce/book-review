
<div class="space-8 container">
  <div class="row">
    <div class="col-md-12">
      <h2>Favorites</h2>
    </div>  
  </div>
  <div class="row">
    <div class="col-md-12 grey-back">
      <% @user_favs.each do |book| %>
        <div class="col-md-2 even-div">
          <div class="overlay-wrapper">
            <span class="focus-overlay"></span>
            <img src="<%= book.img %>" height="200" width="150">
          </div>
        </a>  
        <div class="book-info">
          <a href="/books/{{id}}" class="show-book">
            <p class="title"><%= book.title %></p>
            <input type="hidden" value="{{el}}" class="bookEl">
          </a>  
        </div>  
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>My Reviews</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 grey-back min-height-7 ">

        <% @messages.each do |message| %>
          <div class="user_mes border-grey">
            Book: <a href="/users/<%= message.user_id %>/messages/<%= message.id %>"><%= message.book_title %></a><br>
            Title: <a href="/users/<%= message.user_id %>/messages/<%= message.id %>"><%= message.title %></a><br>
            Review: <a href="/users/<%= message.user_id %>/messages/<%= message.id %>"><%= message.review %></a><br>
          </div>  
        <% end %> 
    
    </div>
    <div class="col-md-3">
    </div>
  </div>    
</div>  
 